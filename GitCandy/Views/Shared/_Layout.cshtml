@inject IProfilerAccessor ProfilerAccessor
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GitCandy</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/bundled.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/bundled.min.css" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">GitCandy<sub>Alpha</sub></a>
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Nav_Repositories"]</a></li>
                    <li><a asp-controller="Home" asp-action="About">@SharedLocalizer["Nav_About"]</a></li>
                    <li><a asp-controller="User" asp-action="Index">@SharedLocalizer["Nav_Users"]</a></li>
                    <li><a asp-controller="Team" asp-action="Index">@SharedLocalizer["Nav_Teams"]</a></li>
                    <li><a asp-controller="Home" asp-action="Setting">@SharedLocalizer["Nav_Settings"]</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-controller="User" asp-action="Create">@SharedLocalizer["Nav_Register"]</a></li>
                    <li><a asp-controller="User" asp-action="Login">@SharedLocalizer["Nav_Login"]</a></li>
                    <li><a asp-controller="User" asp-action="Logout">@SharedLocalizer["Nav_Logout"]</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="container footer">
        <hr />
        <div class="clearfix">
            <div class="pull-right btn-group dropup">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">@CultureHelper.CultureToDisplayCache()<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Home" asp-action="Lang" asp-route-lang="zh-cn">@CultureHelper.CultureToDisplayCache("zh-cn")</a></li>
                    <li><a asp-controller="Home" asp-action="Lang" asp-route-lang="en-us">@CultureHelper.CultureToDisplayCache("en-us")</a></li>
                    <li><a asp-controller="Home" asp-action="Lang" asp-route-lang="fr-fr">@CultureHelper.CultureToDisplayCache("fr-fr")</a></li>
                </ul>
            </div>
            <div class="pull-left"><p class="muted" title="@ProfilerAccessor.Elapsed">&copy; 2013-@DateTime.Now.Year Aimeast. All rights reserved.</p></div>
        </div>
    </div>

    <environment include="Development">
        <script src="~/js/bundled.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/bundled.min.js"></script>
    </environment>
</body>
</html>
