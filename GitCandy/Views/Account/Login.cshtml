@model GitCandy.Models.LoginModel

@{
    ViewBag.Title = string.Format(SR.Shared_TitleFormat, SR.Account_LoginTitle);
}

<h4>@SR.Account_LoginTitle</h4>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group focus">
                @Html.LabelFor(s => s.ID, new { @class = "col-sm-3 control-label lead muted" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(s => s.ID, new { @class = "col-sm-3 form-control lead" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.Password, new { @class = "col-sm-3 control-label lead muted" })
                <div class="col-sm-5">
                    @Html.PasswordFor(s => s.Password, new { @class = "col-sm-3 form-control lead" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3">
                    @Html.ValidationSummary(true, SR.Account_LoginFailed, new { @class = "alert alert-error" })
                </div>
            </div>
            <div class="form-actions">
                <div class="col-sm-offset-3">
                    <button type="submit" class="btn btn-primary">@SR.Shared_Login</button>
                    @Html.ActionLink(SR.Account_ForgotPassword, "Forgot")
                </div>
            </div>
        }

    </div>
</div>
