@{
    ViewBag.Title = string.Format(SR.Shared_TitleFormat, string.Format(SR.Setting_RestartTitle));
}

<h4>@string.Format(SR.Setting_RestartTitle)</h4>

<div class="span7">
    <div class="alert alert-block">
        <h4>@SR.Shared_Conform</h4>
        @string.Format(SR.Setting_RestartWords);
    </div>

    <div class="form-actions">
        <div class="pull-left">
            @Html.ActionLink(SR.Shared_Back, "Edit", "Setting", null, new { @class = "btn" })
        </div>
        <div class="pull-right">
            @Html.ActionLink(SR.Shared_Restart, "Restart", "Setting", new { Conform = "Yes" }, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
