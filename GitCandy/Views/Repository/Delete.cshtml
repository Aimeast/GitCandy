@{
    ViewBag.Title = string.Format(SR.Shared_TitleFormat, string.Format(SR.Repository_DeleteTitle, Model));
}

<h4>@string.Format(SR.Repository_DeleteTitle, Model)</h4>

<div class="span7">
    <div class="alert alert-block">
        <h4>@SR.Shared_Confirm</h4>
        @string.Format(SR.Repository_DeletionWords, Model);
    </div>
    @Html.ValidationSummary(true, "", new { @class = "alert alert-error" })

    <div class="form-actions">
        <div class="pull-left">
            @Html.ActionLink(SR.Shared_Back, "Detail", "Repository", new { name = Model }, new { @class = "btn" })
        </div>
        <div class="pull-right">
            @Html.ActionLink(SR.Shared_Delete, "Delete", "Repository", new { name = Model, Confirm = "Yes" }, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
